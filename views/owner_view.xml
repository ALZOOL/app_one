<odoo>
    <data>
        <record model="ir.ui.view" id="owner_view_list">
            <field name="name">owner.view.list</field>
            <field name="model">owner</field>
            <field name="arch" type="xml">
                <list multi_edit="1">
                    <field name="name" />
                    <field name="phone" />
                    <field name="address" />
                </list>
            </field>
        </record>

        <record model="ir.ui.view" id="owner_view_form">
            <field name="name">owner.view.form</field>
            <field name="model">owner</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" />
                            <h1>
                                <field name="name" placeholder="Owner Name" />
                            </h1>
                        </div>
                            <group string="General Information">
                                <field name="phone" />
                                <field name="address" />
                            </group>
                            <group>
                                <field name="property_ids" widget="many2many_tags" string="Properties Owned"/>
                            </group>
                    </sheet>
                </form>

            </field>
        </record>

        
        <record model="ir.actions.act_window" id="owner_action">
            <field name="name">owner.action</field>
            <field name="res_model">owner</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem
            id="owner_menu_item"
            name="Owners"
            parent="configurations_menu"
            action="owner_action"
        />

    </data>
</odoo>