<odoo>
    <data>
        <record model="ir.ui.view" id="property_view_list">
            <field name="name">estate.property.view.list</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <list multi_edit="1">
                    <field name="name" />
                    <field name="state" />
                    <field name="date_availability" />
                    <field name="postcode" />
                    <field name="expected_price" />
                    <field name="selling_price" />
                    <field name="owner_id" />
                </list>
            </field>
        </record>

        <record model="ir.ui.view" id="property_view_form">
            <field name="name">estate.property.view.form</field>
            <field name="model">estate.property</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" />
                            <h1>
                                <field name="name" placeholder="Property Name" />
                            </h1>
                        </div>
                        <group>
                            <group string="General Information">
                                <field name="date_availability" />
                                <field name="postcode" />
                                <field name="expected_price" />
                                <field name="selling_price" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="active" />
                            </group>
                            <group string="Additional Information">
                                <field name="owner_id" />
                                <field name="garden" />
                                <field name="garden_area" />
                                <field name="bedrooms" />
                                <field name="selling_price" />
                                <field name="garage" />
                                <field name="garden_orientation" />
                                <field name="state" />
                                <field name="tag_ids" widget="many2many_tags" string="Tags"/>
                            </group>
                            <group>
                                <field name="description" />
                            </group>
                        </group>
                    </sheet>
                </form>

            </field>
        </record>

        <record model="ir.ui.view" id="property_view_search">
            <field name="name">estate.property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search>
                    <field name="postcode" />
                    <field name="name" />
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="property_action">
            <field name="name">estate.property.action</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem
            id="property_menu_item"
            name="Properties"
            parent="properties_menu"
            action="property_action"
        />

    </data>
</odoo>